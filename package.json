{
  "name": "clarity",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "node tasks build",
    "build:prod": "node tasks build:prod",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "pretest": "npm run lint",
    "test": "node tasks test",
    "test:ci": "node tasks test:ci",
    "test:watch": "jest --watch --coverage",
    "prestart": "yarn build",
    "start": "node build/backend.js",
    "start:prod": "node dist/backend.js"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "compression": "^1.6.2",
    "es6-promise": "^4.1.0",
    "express": "^4.15.2",
    "helmet": "^3.5.0",
    "isomorphic-fetch": "^2.2.1",
    "prop-types": "^15.5.6",
    "ramda": "^0.23.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-hot-loader": "^1.3.1",
    "react-redux": "^5.0.4",
    "react-router": "^4.0.0",
    "react-router-redux": "^4.0.8",
    "source-map-support": "^0.4.14",
    "webpack": "^2.3.3",
    "webpack-merge": "^4.1.0"
  },
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/express": "^4.0.35",
    "@types/helmet": "^0.0.34",
    "@types/isomorphic-fetch": "^0.0.33",
    "@types/jest": "^19.2.2",
    "@types/node": "^7.0.12",
    "@types/ramda": "^0.0.5",
    "@types/react": "^15.0.21",
    "@types/react-dom": "^0.14.23",
    "@types/redux": "^3.6.0",
    "@types/webpack": "^2.2.14",
    "@types/webpack-dev-middleware": "^1.9.1",
    "@types/webpack-hot-middleware": "^2.15.0",
    "@types/webpack-merge": "^0.0.4",
    "awesome-typescript-loader": "^3.1.2",
    "babel-core": "^6.24.1",
    "child_process": "^1.0.2",
    "jest": "^19.0.2",
    "nightwatch": "^0.9.14",
    "react": "^15.5.3",
    "ts-jest": "^19.0.8",
    "tslint": "^5.0.0",
    "typescript": "^2.2.2",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-hot-middleware": "^2.18.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": ".*\\.test\\.(ts|tsx)$"
  }
}
