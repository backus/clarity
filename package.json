{
  "name": "clarity",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "//": "Build development server",
    "build": "webpack --config webpack/server/development.ts",

    "//": "Build release and output it into /dist",
    "build:prod": "webpack --config webpack/server/production.ts",

    "//": "Lint all Typescript files",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",

    "//": "Run linter as part of test script",
    "pretest": "npm run lint",

    "//": "More info on Jest config below",
    "test": "jest --coverage",

    "//": "Bundle the server with development environment before start script",
    "prestart": "yarn build",

    "//": "Run development server",
    "start": "node build/backend.js",

    "//": "Run production server",
    "start:prod": "node dist/backend.js"
  },
  "dependencies": {
    "awesome-typescript-loader": "^3.1.2",
    "babel-core": "^6.24.1",
    "chalk": "^1.1.3",
    "express": "^4.15.2",
    "ramda": "^0.23.0",
    "source-map-support": "^0.4.14",
    "webpack": "^2.3.3",
    "webpack-merge": "^4.1.0"
  },
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/express": "^4.0.35",
    "@types/jest": "^19.2.2",
    "@types/node": "^7.0.12",
    "@types/ramda": "^0.0.5",
    "@types/redux": "^3.6.0",
    "@types/webpack": "^2.2.14",
    "@types/webpack-merge": "^0.0.4",
    "jest": "^19.0.2",
    "ts-jest": "^19.0.8",
    "tslint": "^5.0.0",
    "typescript": "^2.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": ".*\\.test\\.(ts|tsx)$"
  }
}
